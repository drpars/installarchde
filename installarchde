    "Hyprland")
      hyprland
      nextitem="KDE/Plasma"
      ;;
    "KDE/Plasma")
      plasma
      nextitem="Gnome"
      ;;
    "Gnome")
      gnome
      nextitem="Gnome"
      ;;
    esac
    demenu "${nextitem}"
  fi
}

