      )

      sel=$(dialog --backtitle "$apptitle" --title "Yazi dependencies :" --cancel-button "Back" --checklist "" 0 0 0 "${options[@]}" 3>&1 1>&2 2>&3)

      for item in $sel; do
        item=$(echo "$item" | tr -d '"')
        case $item in
        # "") aurpkg="$aurpkg $item" ;;
        *) pkg="$pkg $item" ;;
        esac
      done

      instpkg "$pkg" "$aurpkg"
    fi
  fi
}

