      item=$(echo "$item" | tr -d '"')
      case $item in
      "latte-dock-git" | "plasma5-applets-virtual-desktop-bar-git" | "plasma5-applets-window-appmenu-git" | "sddm-conf-git")
        aurpkg="$aurpkg $item"
        ;;
      *) pkg="$pkg $item" ;;
      esac
    done

    instpkg "$pkg" "$aurpkg"
  fi
}

